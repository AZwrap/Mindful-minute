rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Allow YOU (the developer) to do anything
    // Replace the ID below with your UID from the Firebase Auth tab
    match /{document=**} {
      allow read, write: if request.auth.uid == "YOUR_ACTUAL_UID_HERE";
    }

    // 2. Allow any logged-in user to create/read their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /journals/{journalId} {
      // Allow creation if they are logged in
      allow create: if request.auth != null;
      
      // Allow read/write if they are the one who made it
      allow read, write: if request.auth != null && resource.data.owner == request.auth.uid;

      match /entries/{entryId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}