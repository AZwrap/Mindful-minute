rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Developer Backdoor
    // Replace the ID below with your actual UID from the Firebase Auth tab
    match /{document=**} {
      allow read, write: if request.auth.uid == "YOUR_ACTUAL_UID_HERE";
    }

    // 2. Personal User Data
    // Recursive match for sync, backup, and restore
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Shared Journals
    match /journals/{journalId} {
      allow create: if request.auth != null;
      
      // Allows any logged-in user to find a journal via code
      allow read: if request.auth != null;
      
      // Allow update if user is already a member OR if they are joining
      allow update: if request.auth != null && (
        resource.data.owner == request.auth.uid || 
        request.auth.uid in resource.data.memberIds ||
        // Joining logic: allow adding their own UID to the memberIds list
        (
          request.resource.data.memberIds.hasAll(resource.data.memberIds) &&
          request.auth.uid in request.resource.data.memberIds
        )
      );

      // Only the owner can delete a journal
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;

// 4. Reports Subcollection
      match /reports/{reportId} {
        // Anyone can report
        allow create: if request.auth != null;
        
        // Only Owner or Admins can read/delete
        allow read, write: if request.auth != null && (
          // 1. Check if user is the Owner
          get(/databases/$(database)/documents/journals/$(journalId)).data.owner == request.auth.uid ||
          
          // 2. Check if user is an Admin (Safely check if key exists first)
          (
            request.auth.uid in get(/databases/$(database)/documents/journals/$(journalId)).data.membersMap && 
            get(/databases/$(database)/documents/journals/$(journalId)).data.membersMap[request.auth.uid] == 'admin'
          )
        );
      }

// 5. Entries Subcollection
      match /entries/{entryId} {
        allow read, write: if request.auth != null && 
          exists(/databases/$(database)/documents/journals/$(journalId)) && (
            get(/databases/$(database)/documents/journals/$(journalId)).data.owner == request.auth.uid ||
            
            // Check Array (memberIds)
            (
              get(/databases/$(database)/documents/journals/$(journalId)).data.memberIds != null && 
              request.auth.uid in get(/databases/$(database)/documents/journals/$(journalId)).data.memberIds
            ) ||
            
            // Check Map (membersMap) - Crucial for Google Auth/Role Sync
            (
              get(/databases/$(database)/documents/journals/$(journalId)).data.membersMap != null && 
              request.auth.uid in get(/databases/$(database)/documents/journals/$(journalId)).data.membersMap
            )
        );
      }
    }
  }
}